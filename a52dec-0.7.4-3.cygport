DESCRIPTION="ATSC A/52 decoder"
HOMEPAGE="http://liba52.sourceforge.net/"
SRC_URI="http://liba52.sourceforge.net/files/${P}.tar.gz"

DOCS="doc/liba52.txt"

PKG_NAMES="${PN} liba52_0 liba52-devel"
PKG_HINTS='setup lib devel'
PKG_CONTENTS[0]='usr/bin/*.exe usr/share/'
PKG_CONTENTS[1]='usr/bin/*.dll'
PKG_CONTENTS[2]='usr/include/ usr/lib/'

src_install() {
	cd ${B}
	cyginstall

	# required for xine-lib
	insinto /usr/include/${PN}
	doins ${S}/liba52/a52_internal.h
}
